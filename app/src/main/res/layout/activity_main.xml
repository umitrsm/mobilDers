<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sade"
    tools:context=".MainActivity">




    <ImageView
        android:layout_width="168dp"
        android:layout_height="110dp"
        android:layout_below="@+id/txtwelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo" />
    <Button
        android:id="@+id/hesapOlustur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hesap_olustur"
        android:background="@drawable/custom_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:textColor="@color/yazi"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        />

    <Button
        android:id="@+id/hesapVar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hesabim_var"
        android:background="@drawable/custom_button"
        android:textColor="@color/yazi"
        android:layout_above="@+id/hesapOlustur"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        />

</RelativeLayout>